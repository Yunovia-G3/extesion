{
  "manifest_version": 3,
  "name": "Job Application Tracker",
  "version": "1.0",
  "description": "Track your job applications and analyze progress.",
  "permissions": [
    "storage",
    "sidePanel",
    "identity",
    "identity.email",
    "unlimitedStorage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_icon": "assets/icon.png" 
  },
  "web_accessible_resources": [{
    "resources": ["pdfjs/*"],
    "matches": ["<all_urls>"]
  }],
  "host_permissions": ["<all_urls>"],
  "oauth2": {
    "client_id": "1043893440912-ren2nsppp32i4r0mnb21c0vm66t2h5v2.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email"
    ]
}
}