{
  "manifest_version": 3,
  "name": "Job Application Tracker",
  "version": "1.0",
  "description": "Track your job applications and analyze progress.",
   "permissions": [
    "storage",
    "sidePanel",
    "identity",
    "unlimitedStorage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "web_accessible_resources": [{
    "resources": ["pdfjs/*"],
    "matches": ["<all_urls>"]
  }],
  "host_permissions": ["<all_urls>"]
}