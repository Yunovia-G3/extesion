{
  "manifest_version": 3,
  "name": "Job Application Tracker",
  "version": "1.0",
  "description": "Track your job applications and analyze progress.",
  "permissions": [
    "storage",
    "sidePanel",
    "identity",
    "unlimitedStorage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_icon": "assets/icon.png" 
  },
  "web_accessible_resources": [{
    "resources": ["pdfjs/*"],
    "matches": ["<all_urls>"]
  }],
  "host_permissions": ["<all_urls>"]
}